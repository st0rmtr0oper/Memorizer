<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_notes">

    <fragment
        android:id="@+id/nav_notes"
        android:name="com.djentleman.memorizer.ui.notes.NotesFragment"
        android:label="@string/menu_notes"
        tools:layout="@layout/fragment_notes">
        <action
            android:id="@+id/action_notes_to_editor"
            app:destination="@+id/nav_edit"
            app:popUpTo="@id/nav_edit"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_archive"
        android:name="com.djentleman.memorizer.ui.archive.ArchiveFragment"
        android:label="@string/menu_archive"
        tools:layout="@layout/fragment_archive">
        <action
            android:id="@+id/action_nav_archive_to_nav_edit"
            app:destination="@id/nav_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_trash"
        android:name="com.djentleman.memorizer.ui.trash.TrashFragment"
        android:label="@string/menu_trash"
        tools:layout="@layout/fragment_trash">
        <action
            android:id="@+id/action_nav_trash_to_nav_edit"
            app:destination="@id/nav_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_edit"
        android:name="com.djentleman.memorizer.ui.editor.EditorFragment"
        android:label="@string/menu_editor"
        tools:layout="@layout/fragment_note_editor">
        <argument
            android:name="editorMode"
            app:argType="com.djentleman.memorizer.domain.models.EditorMode" />
        <argument
            android:name="noteId"
            app:argType="integer" />
    </fragment>
</navigation>