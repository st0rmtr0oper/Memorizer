<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/noteViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/note_header"
            style="@style/noteTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Заголовок заметки" />

        <ProgressBar
            android:id="@+id/status_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/note_header"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/note_content"
            style="@style/noteTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_bar"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Текст заметки \n\n\n че то тут написано" />

        <!--        <TextView-->
        <!--            android:id="@+id/note_date_of_edit"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/card_text"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:textColor="@color/black"-->
        <!--            tools:text="2024.10.17|15:57"-->
        <!--            android:textSize="12sp" />-->
    </RelativeLayout>
</androidx.cardview.widget.CardView>
