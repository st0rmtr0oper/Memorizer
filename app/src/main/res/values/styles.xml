<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    TODO adapt for themes-->

    <!-- Edit Text Style -->
    <style name="noteEditorHeader" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">12dp</item>
        <item name="hintTextColor">@color/pink_medium</item>
    </style>

    <!-- Note Recycler Item Style -->
    <style name="noteEditorContent" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">12dp</item>
        <item name="hintTextColor">@color/pink_medium</item>
        <item name="android:gravity">top|start</item>
    </style>

    <!-- Note Style -->
    <!-- CardView Style -->
    <style name="noteViewStyle">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- NoteTextView Style -->
    <style name="noteTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

</resources>